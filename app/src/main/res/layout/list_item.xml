<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_Layout_list_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_images_list_1"
                android:layout_width="41dp"
                android:layout_height="40dp"
                android:background="@drawable/profile_image" />

            <LinearLayout
                android:id="@+id/linear_Layout_list_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/profile_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_pengguna"
                    android:textColor="@color/cloudy"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hours_list_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Jam yang lalu"
                    android:textColor="@color/cloudy_transparent"
                    android:textSize="10sp" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/menu_post"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/menu"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>